<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.wty.app.library.widget.imageview.CircleImageView
        android:id="@+id/iv_head"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dip"
        android:src="@drawable/im_pub_no_image"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_head"
        android:layout_marginTop="12dp"
        android:singleLine="true"
        android:text="超人舞厅"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_head"
        android:layout_alignBottom="@id/iv_head"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:text="昨天XXXX"
        android:textColor="@color/gray_font_3"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_time"
        android:layout_marginLeft="8dp"
        android:text="来自[华南吃饭大学]"
        android:layout_alignBottom="@id/iv_head"
        android:layout_marginBottom="5dp"
        android:textColor="@color/gray_font_3"
        android:textSize="11sp" />

    <ImageView
        android:id="@+id/iv_nav"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:scaleType="fitCenter"
        android:paddingTop="2dp"
        android:paddingBottom="10dp"
        android:paddingLeft="18dp"
        android:paddingRight="2dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/img_nav_down"/>

    <com.wty.app.library.widget.imageview.ColorFilterImageView
        android:id="@+id/oneImagView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="6dp"
        android:layout_below="@id/iv_head"/>

    <TextView
        android:id="@+id/tv_price_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/oneImagView"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="6dp"
        android:paddingLeft="5dp"
        android:text="¥300.00"
        android:textColor="@color/red"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_price_old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewStub"
        android:layout_toRightOf="@id/tv_price_new"
        android:layout_alignBottom="@id/tv_price_new"
        android:layout_alignBaseline="@id/tv_price_new"
        android:layout_marginTop="5dp"
        android:text="¥100.00"
        android:layout_marginLeft="10dp"
        android:textColor="@color/gray_font_3"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_price_new"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:text="测试一下一下途径"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_postage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:background="@drawable/bg_tv_pink"
        android:layout_marginBottom="10dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:text="包邮"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:textSize="12sp" />

