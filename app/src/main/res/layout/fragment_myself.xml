<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.wty.app.goschool.widget.myself.MySelfIconLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.wty.app.goschool.widget.myself.MySelfIconLayout>

        <com.wty.app.library.widget.HomeItemView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemImage="@drawable/ic_myself_gallery"
            app:itemText="我的相册"/>

        <com.wty.app.library.widget.HomeItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemImage="@drawable/ic_myself_folder"
            app:itemText="我的文件"
            app:itemDivide="false"/>

        <com.wty.app.library.widget.HomeItemView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemImage="@drawable/ic_myself_about"
            app:itemText="关于我们"
            app:itemDivide="false"/>

    </LinearLayout>
</ScrollView>
