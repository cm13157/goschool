<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Base.V7.Theme.AppCompat.Light">
        <!--Customize your theme here.-->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
        <item name="actionBarStyle">@style/ActionBarBaseStyle</item>
        <!--去掉actionbar阴影 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.LaunchStyle">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionBarBaseStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="height">50dip</item>
        <item name="elevation">0dp</item>
    </style>

</resources>
